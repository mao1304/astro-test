<style is:global>

    .navbar {
        font-family: 'Arial', sans-serif;
        background-color: #ffffff;
        padding: 1rem;
        color: white;
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 100;
    }

    .navbar-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1200px;
        margin: 0 auto;
    }

    .navbar-logo {
        color: rgb(0, 0, 0);
        text-decoration: none;
        font-size: 1.5rem;
        font-weight: bold;
    }

    .navbar-menu {
        list-style: none;
        display: flex;
        margin: 0;
        padding: 0;
    }

    .navbar-item {
        margin-left: 1.5rem;
    }

    .navbar-link {
        color: rgb(0, 0, 0);
        text-decoration: none;
        font-size: 1rem;
        transition: color 0.3s ease;
    }

    .navbar-link:hover {
        color: #4a90e2;
    }

    /* Estilo para dispositivos móviles */
    .navbar-toggle {
        display: none;
        cursor: pointer;
    }

    .fas.fa-bars {
        color: white;
        font-size: 1.5rem;
    }

</style>

<script>
    document.getElementById('mobile-menu').addEventListener('click', function () {
        const menu = document.querySelector('.navbar-menu');
        menu.classList.toggle('active');
    });
</script>
